<ul class="messages_layout">
    <% @reviews.each do |review| %>
        <li class="from_user review-mainbox">
        <div class="message_wrap">
            <span class="arrow"></span>
            <div class="info">
                <span class="name"><%= review.name %></span>
            </div>
            <div class="text">
                <% if @excerpt %>
                    <%= simple_format(review.excerpt).html_safe %>
                <% else %>
                    <%= simple_format(review.text).html_safe %>
                <% end %>
            </div>

            <div class="footer">
                <div class="pull-left">
                    <div class="row-fluid">
                        <span class="time"><%= time_ago_in_words(review.created_at) %> ago</span>
                    </div>
                    <div class="row-fluid review-status<%= ' review-approved' if review.approved %>">
                        <span class="toggle-approve<%= ' hidden' unless review.approved %>">На главной</span>
                        <span class="toggle-approve<%= ' hidden' if review.approved %>"></span>
                    </div>
                </div>
                <div class="actions pull-right hidden-phone">
                    <ul class="pull-right">
                        <li>
                        <button type="button" class="btn btn-default btn-large review-action delete-review confirm-on-click" data-confirmation="Вы уверены, что хотите удалить этот отзык навсегда?" data-review-id="<%= review.id %>" data-placement="top" data-original-title="Удалить отзыв навсегда" rel="tooltip">
                            <span class="icon-remove"></span>
                            Удалить
                        </button>
                        </li>
                        <li class="toggle-approve<%= ' hidden' unless review.approved %>">
                        <button type="button" class="btn btn-default btn-large review-action disapprove-review" data-review-id="<%= review.id %>"  data-placement="top" data-original-title="Удалить отзыв только с главной страницы" rel="tooltip">
                            <span class="icon-thumbs-down"></span>
                            Убрать с главной
                        </button>
                        </li>
                        <li class="toggle-approve<%= ' hidden' if review.approved %>">
                        <button type="button" class="btn btn-default btn-large review-action approve-review" data-review-id="<%= review.id %>"  data-placement="top" data-original-title="Поместить отзыв на главную страницу" rel="tooltip">
                            <span class="icon-thumbs-up"></span>
                            На главную
                        </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        </li>
    <% end %>
</ul>
